{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware": "Critical",
            "Microsoft.AspNetCore.HttpsPolicy.HttpsRedirectionMiddleware": "Critical",
            "Microsoft.AspNetCore.Server.Kestrel": "Critical",
            "LuckyPennySoftware.MediatR.License": "Critical"
        }
    },
    "AllowedHosts": "*",
    "Database": {
        "TrustServerCertificate": true,
        "CommandTimeout": 30,
        "EnableSensitiveDataLogging": false,
        "EnableDetailedErrors": false
    },
    "PaginationSettings": {
        "DefaultPage": 1,
        "DefaultPageSize": 20,
        "MaxPageSize": 100
    },
    "Jwt": {
        "AccessTokenLifetimeSeconds": 900,
        "RefreshTokenLifetimeSeconds": 604800
    }
}