# Database Provider
DB_PROVIDER=PostgreSQL

# PostgreSQL Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alfred_identity
DB_USER=postgres
DB_PASSWORD=Admin@123

# Development Options (only enable in development)
DB_ENABLE_SENSITIVE_LOGGING=true
DB_ENABLE_DETAILED_ERRORS=true

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
APP_HOSTNAME=localhost
APP_PORT=8100

# CORS Settings (Identity Web + Gateway + Core Web)
CORS_ALLOWED_ORIGINS=https://gateway.test

# SSO Cookie Settings
SSO_COOKIE_DOMAIN=gateway.test

# JWT Settings - Must match the issuer in well-known/openid-configuration
Jwt__Issuer=https://gateway.test

# URL Configuration (Replaces appsettings Urls section)
Urls__Gateway=https://gateway.test
Urls__SsoWeb=https://sso.test
